# Server Configuration
PORT=3000

# CSV File Path (relative to project root)
CSV_FILE_PATH=./uploads/users.csv

# Supabase PostgreSQL Database Configuration
# Option 1: Use connection string (recommended for complex passwords)
DATABASE_URL=postgresql://postgres:your_password@db.your-project-ref.supabase.co:5432/postgres

# Option 2: Use individual parameters (if DATABASE_URL is not set)
PGHOST=db.your-project-ref.supabase.co
PGUSER=postgres
PGPASSWORD=your_database_password
PGDATABASE=postgres
PGPORT=5432

# Optional: Set to 'production' for SSL connection
NODE_ENV=development 